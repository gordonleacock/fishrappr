<div class="col-sm-12 ">
  <h2>Browse Issues</h2>
  <h5>Browse The Michigan Daily Issues back to 1890</h5>

  <h3>Select a decade, year, month or day to browse issues</h3>

  <% decade_browse_options = get_decade_browse_options %>
  <% year_browse_options = get_year_browse_options %>
  <% month_browse_options = get_month_options; month_browse_options.unshift(['Any Month', 'Any Month']) %>
  <% date_browse_options = get_date_options; date_browse_options.unshift(['Any Day', 'Any Day']) %>


    <%= form_tag(browse_path, role: 'browse', method: :get, class: "form-inline browse-form") do %>
      <div class="browse-select-box">
        <div class="form-group">

          <label class="sr-only">Browse by</label>
          <%= select_tag(name="date_issued_yyyy10_ti", options_for_select(decade_browse_options), class: 'changeable form-control') %>
          <%= select_tag(name="date_issued_yyyy_ti", options_for_select(year_browse_options), class: 'changeable form-control') %>
          <%= select_tag(name="date_issued_mm_ti", options_for_select(month_browse_options), class: 'changeable form-control') %>
          <%= select_tag(name="date_issued_dd_ti", options_for_select(date_browse_options), class: 'changeable form-control') %>
          <button type="submit" class="btn btn-action btn-lg" xid="browse">
            <span class="glyphicon glyphicon-search"></span>
            <span class="hidden glyphicon glyphicon-refresh glyphicon-refresh-animate"></span> 
            <span class="submit-browse-text">Browse</span>
          </button>
        </div>
      </div>
    <% end %>
</div>

<div class="col-sm-12">
  <div class="issues-display">
    <% months = ["Any Month", "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]

      params['date_issued_mm_ti'] == "Any Month" ? this_month = "Any Month" : this_month = months[ params['date_issued_mm_ti'].to_i ]
      if (params['date_issued_yyyy_ti'] == "Any Year" && params['date_issued_yyyy10_ti'] == "Any Decade")
          this_decade = " in Any Decade" 
      end
      if (params['date_issued_yyyy_ti'] == "Any Year" && params['date_issued_yyyy10_ti'] != "Any Decade")
          this_decade = " in the " << params['date_issued_yyyy10_ti'] << "s" 
      end
      if (params['date_issued_yyyy_ti'] != "Any Year")
          this_decade = "" 
      end
    %>
    <h3>Browsing: <%= params['date_issued_dd_ti'] %> of <%= this_month %>, <%= params['date_issued_yyyy_ti'] %><%= this_decade %></h3>  

    <%= render 'search_results' %>
  </div>
</div>