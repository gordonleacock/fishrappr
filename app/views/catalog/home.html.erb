<div class="container-fluid">
  <div class="home">

    <div class="row">
      <div class="col-md-12">
        <div class="head">
          <h2><%= t('views.static.home.head.h2') %></h2>
          <h3><%= t('views.static.home.head.h3') %></h3>
          <p class="para1"><%= t('views.static.home.head.p1') %></p>
          <p class="para2"><%= t('views.static.home.head.p2') %></p>
          <%= link_to t('views.static.home.head.link'), static_path("about") %>

          <% if true %><%= render partial: "search_form", locals: { container_class: 'container' } %><% end %>
          <% if false %><%= render "search_form", locals: { container_class: 'container' } %><% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="donors">
          <h3><%= t('views.static.home.donors.h3') %></h3>
          <p class="description"><%= t('views.static.home.donors.p') %></p>
          <%= link_to t('views.static.home.donors.link'), static_path("donors") %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="featured">
          <h3>Issues From this Date in Past Years*</h3>

             <%= render 'search_results' %>

        </div>
      </div>
    </div>

</div>